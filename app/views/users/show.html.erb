<h1><%= current_user.nickname %>さんのマイページです</h1>

  <div><!-- 登録済みの部屋一覧 -->
    <% @rooms.each do |room| %>
    <h2 class ="mypage"><%= @number %>.<%= room.room_name %></h2>

      <%= image_tag room.t_photo.url, :width => '400px', :height => '280px' %><BR>
      <a href="/rooms/<%= room.id %>">プレビュー＆編集</a>


      <%= link_to '削除', "/rooms/#{room.id}", method: :delete, data: { confirm: 'Are you sure?' } %><br>
      <% @number += 1 %>

    <% end %>
  </div>

  <div>
    <% if @number <= current_user.qty %>
      <a href="/rooms/new">新規room作成</a>
    <% end %>
  </div>
<!--Room数が上限以上だった時に非表示にするif 分。user.rooms.count -->