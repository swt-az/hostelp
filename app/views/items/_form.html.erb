<%= form_for [@room, @item] do |f| %>

  <div class="field">
    <%= f.label :photo_no, "写真の番号（番号順に並びます。）" %><br>
    <%= f.text_area :photo_no %><br>
    <%= f.label :description, "道案内の説明を書いていきます。" %><br>
    <%= f.text_area :description %><br>
    <%= f.label :image, "道案内写真を一枚ずつアップロードしていきます。" %><br>
    <%= f.file_field :image %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
